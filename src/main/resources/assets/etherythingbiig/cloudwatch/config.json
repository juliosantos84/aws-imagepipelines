{
    "agent": {
      "metrics_collection_interval": 60,
      "logfile": "/var/log/amazon-cloudwatch-agent.log"
    },
    "metrics": {
      "namespace": "EthBeaconChain",
      "metrics_collected": {
        "cpu": {
          "resources": [
            "*"
          ],
          "measurement": [
            {"name": "cpu_usage_idle", "rename": "CPU_USAGE_IDLE", "unit": "Percent"},
            {"name": "cpu_usage_nice", "unit": "Percent"},
            "cpu_usage_guest"
          ],
          "totalcpu": false,
          "metrics_collection_interval": 60
        },
        "disk": {
          "resources": [
            "/",
            "/var/lib/chaindata"
          ],
          "measurement": [
            {"name": "free", "rename": "DISK_FREE", "unit": "Gigabytes"},
            "total",
            "used"
          ],
           "ignore_file_system_types": [
            "sysfs", "devtmpfs"
          ],
          "metrics_collection_interval": 300
        },
        "diskio": {
          "resources": [
            "*"
          ],
          "measurement": [
            "reads",
            "writes",
            "read_time",
            "write_time",
            "io_time"
          ],
          "metrics_collection_interval": 300
        },
        "swap": {
          "measurement": [
            "swap_used",
            "swap_free",
            "swap_used_percent"
          ],
          "metrics_collection_interval": 300
        },
        "mem": {
          "measurement": [
            "mem_used",
            "mem_cached",
            "mem_total"
          ],
          "metrics_collection_interval": 60
        },
        "prometheus":{
          "cluster_name":"ethbeaconchain-cluster",
          "log_group_name":"Prometheus",
          "prometheus_config_path":"/etc/prometheus/prometheus.yml",
          "emf_processor":{
             "metric_declaration_dedup":true,
             "metric_namespace":"EthBeaconChain",
             "metric_unit":{
                "sync_peers_per_status": "Count",
                "sync_slots_per_second": "Seconds",
                "sync_eth1_connected": "Count",
                "eth1_sync_fallback_connected": "Count"
             },
             "metric_declaration":[
                {
                   "metric_selectors":[
                      "^sync_peers_per_status$",
                      "^sync_slots_per_second$",
                      "^sync_eth1_connected$",
                      "^eth1_latest_cached_block_timestamp$",
                      "^eth1_sync_fallback_connected$"
                   ]
                }
             ]
          },
          "measurement":[
            "sync_peers_per_status",
            "sync_slots_per_second",
            "sync_eth1_connected",
            "eth1_latest_cached_block_timestamp",
            "eth1_sync_fallback_connected"
          ],
          "metrics_collection_interval": 60
        }
      },
      "append_dimensions": {
        "InstanceName": "${aws:InstanceName}"
      },
      "aggregation_dimensions" : [["InstanceName"]],
      "force_flush_interval" : 30
    },
    "logs": {
      "logs_collected": {
        "files": {
          "collect_list": [
            {
              "file_path": "/var/log/amazon-cloudwatch-agent.log",
              "log_group_name": "amazon-cloudwatch-agent.log",
              "log_stream_name": "amazon-cloudwatch-agent.log",
              "timezone": "UTC"
            },
            {
              "file_path": "/var/log/syslog",
              "log_group_name": "syslog",
              "log_stream_name": "syslog",
              "timezone": "UTC"
            }
          ]
        }
      },
      "log_stream_name": "my_log_stream_name",
      "force_flush_interval" : 15
    }
  }